# ========================================
# CONFIGURAÇÕES DA APLICAÇÃO - PROGRAMA EQUILÍBRIO
# ========================================
# 
# Este é um arquivo de exemplo. Copie este arquivo para .env e 
# configure as variáveis com seus valores reais.
#
# IMPORTANTE: Nunca commite o arquivo .env com credenciais reais!
#

# Ambiente da aplicação
FLASK_ENV=development
DEBUG=True
FLASK_SECRET_KEY=sua-chave-secreta-super-segura-aqui-mude-para-producao

# Porta da aplicação (opcional, padrão: 5000)
PORT=5000

# ========================================
# CONFIGURAÇÕES DO BANCO SUPABASE
# ========================================

# URLs e chaves do Supabase (obtenha em https://supabase.com)
SUPABASE_URL=https://your-project-id.supabase.co
SUPABASE_ANON_KEY=your_supabase_anon_key_here

# ========================================
# CONFIGURAÇÕES DE ADMINISTRAÇÃO
# ========================================

# Credenciais do administrador padrão
# ⚠️ MUDE ESTAS CREDENCIAIS EM PRODUÇÃO!
ADMIN_EMAIL=admin@conecta.com
ADMIN_PASSWORD=admin123
ADMIN_NAME=Administrador Sistema

# Configurações de sessão admin (tempo em segundos)
ADMIN_SESSION_TIMEOUT=7200

# ========================================
# APIs EXTERNAS
# ========================================

# API do ReceitaWS para validação de CNPJ
RECEITAWS_API_URL=https://www.receitaws.com.br/v1/cnpj/
RECEITAWS_TIMEOUT=15

# API ViaCEP para validação de endereço
VIACEP_API_URL=https://viacep.com.br/ws/
VIACEP_TIMEOUT=10

# ========================================
# CONFIGURAÇÕES DE SEGURANÇA
# ========================================

# Cookies seguros (para produção com HTTPS)
SESSION_COOKIE_SECURE=False
SESSION_COOKIE_HTTPONLY=True
SESSION_COOKIE_SAMESITE=Lax
PERMANENT_SESSION_LIFETIME=3600

# Proteção CSRF
WTF_CSRF_ENABLED=True
WTF_CSRF_TIME_LIMIT=3600

# ========================================
# CONFIGURAÇÕES DE LOGGING
# ========================================

# Nível de log (DEBUG, INFO, WARNING, ERROR, CRITICAL)
LOG_LEVEL=INFO
LOG_FORMAT=%(asctime)s - %(name)s - %(levelname)s - %(message)s

# Arquivos de log (ajuste conforme sua infraestrutura)
LOG_FILE=/var/log/programaequilibrio.log
ERROR_LOG_FILE=/var/log/programaequilibrio_errors.log

# ========================================
# CONFIGURAÇÕES ESPECÍFICAS POR AMBIENTE
# ========================================

# Para desenvolvimento local:
# FLASK_ENV=development
# DEBUG=True
# SESSION_COOKIE_SECURE=False

# Para produção:
# FLASK_ENV=production
# DEBUG=False
# SESSION_COOKIE_SECURE=True
