# Configurações da aplicação
FLASK_ENV=production
DEBUG=False
SECRET_KEY=sua-chave-secreta-super-segura-aqui

# Porta da aplicação (opcional, padrão: 5000)
PORT=5000

# Configurações do Supabase
SUPABASE_URL=sua_url_do_supabase
SUPABASE_KEY=sua_chave_publica_do_supabase

# API do ReceitaWS para validação de CNPJ
RECEITAWS_API_URL=https://www.receitaws.com.br/v1/cnpj/

# Configurações de segurança
SESSION_COOKIE_SECURE=True
SESSION_COOKIE_HTTPONLY=True
PERMANENT_SESSION_LIFETIME=3600

# Configurações de logging (opcional)
LOG_LEVEL=INFO
LOG_FILE=/var/log/programaequilibrio.log
